<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="960"
		WindowState="Maximized"
        x:Class="Registration.MainWindow"
        Title="Registration">
	<Window.Background>
		<ImageBrush Source="C:\Users\prdb\Desktop\Registration\Registration\Assets\11.png">
			</ImageBrush>
	</Window.Background>

	<Grid>



		<Grid
			ShowGridLines="False"
